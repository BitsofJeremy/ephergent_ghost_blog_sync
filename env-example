# Ghost Blog
# Settings > Integrations > CUSTOM INTEGRATIONS > Your App
# https://BLOG_URL/ghost/#/settings/integrations
export GHOST_DOMAIN=YOUR_HOT_INTERNET_SITE_FQDN
export GHOST_API_KEY='YOUR_CONTENT_API_KEY'
export GHOST_ADMIN_KEY='YOUR_ADMIN_API_KEY'

# Twitter
# Your App Oauth keys
# https://developer.twitter.com/
export CONSUMER_KEY='YOUR_API_KEY'
export CONSUMER_SECRET='YOUR_API_KEY_SECRET'
export OAUTH_TOKEN='YOUR_ACCESS_TOKEN'
export OAUTH_TOKEN_SECRET='YOUR_ACCESS_TOKEN_SECRET'

# Mastodon
# Settings > Development > Your App > "Your access token"
# https://YOUR_INSTANCE/settings/applications
export ACCESS_TOKEN=YOUR_SUPER_SECRET_KEYS
export MASTODON_INSTANCE='MASTODON_INSTANCE_TO_POST_TO'

# Warpcast Mnemonic phrase [12-24 words]
export MNEMONIC_ENV_VAR="hotdog potato etc etc"
export WARPCAST_CHANNEL=farcaster